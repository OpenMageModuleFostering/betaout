                    </amplify_customer_save>
                </observers>
            </customer_save_commit_after>
            <sales_order_place_after><!--could used sales_order_save_after for backend support, but it fires mulitple times-->
                <observers>
                    <amplify_order_save>
                        <type>singleton</type>
                        <class>Betaout_Amplify_Model_Key</class>
                        <method>getAmplifyEventOrder</method>
                    </amplify_order_save>
                </observers>
            </sales_order_place_after>
            
            
<!--            <sales_order_place_before>
                <observers>
                    <amplify_customer_register_from_checkout>
