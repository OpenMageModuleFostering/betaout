<?xml version="1.0" encoding="utf-8"?>
<config>

    
    
    <modules>
        <Betaout_Amplify>
            <version>0.1.1</version>
        </Betaout_Amplify>
    </modules>
    <global>
        <models>
            <betaout_amplify>
                <class>Betaout_Amplify_Model</class>
                <resourceModel>betaout_amplify_mysql4</resourceModel>
            </betaout_amplify>
            <betaout_amplify_mysql4>
                <class>Betaout_Amplify_Model_Mysql4</class>
            </betaout_amplify_mysql4>
            <sales>
                <rewrite>
                    <order>Betaout_Amplify_Model_Order</order>
                </rewrite>
            </sales>
        </models>
        
        <helpers>
            <betaout_amplify>
                <class>Betaout_Amplify_Helper</class>
            </betaout_amplify>
        </helpers> 

        <events>
              <checkout_cart_add_product_complete>
                <observers>
                    <amplify_add_to_cart>
                        <type>singleton</type>
                        <class>Betaout_Amplify_Model_Key</class>
                        <method>getAmplifyEventAddToCart</method>
                    </amplify_add_to_cart>
                </observers>
            </checkout_cart_add_product_complete> 
            <sales_order_item_cancel>
                <observers>
                    <betaout_amplify_sales_order_item_cancel>
                        <class>Betaout_Amplify_Model_Key</class>
                        <method>getAmplifyCancelOrderItem</method>
                    </betaout_amplify_sales_order_item_cancel>
                </observers>
            </sales_order_item_cancel>
            <checkout_cart_update_items_after>
                <observers>
                    <betaout_amplify_checkout_cart_update_items_after>
                        <class>Betaout_Amplify_Model_Key</class>
                        <method>getAmplify_cartUpdate</method>
                    </betaout_amplify_checkout_cart_update_items_after>
                </observers>
            </checkout_cart_update_items_after>
            <sales_order_status_change>
                <observers>
                    <sales_order_status_change>
                        <type>singleton</type>
                        <class>Betaout_Amplify_Model_Key</class>
                        <method>getAmplifyCheckOrderStatus</method>
                    </sales_order_status_change>
                </observers>
            </sales_order_status_change>
            <customer_address_save_before>
                <observers>
                    <customer_address_before_save>
                        <class>Betaout_Amplify_Model_Key</class>
                        <method>getAmplifyCustomerAdressSaveAfter</method>
                    </customer_address_before_save>
                </observers>
            </customer_address_save_before>
            <customer_save_after>
                <observers>
                    <customer_save_after>
                        <class>Betaout_Amplify_Model_Key</class>
                        <method>customerSaveAfter</method>
                    </customer_save_after>
                </observers>
            </customer_save_after>
            <customer_register_success>
                <observers>
                    <amplify_customer_register_success>
                        <type>singleton</type>
                        <class>Betaout_Amplify_Model_Key</class>
                        <method>eventCustomerRegisterSuccess</method>
                    </amplify_customer_register_success>
                </observers>
            </customer_register_success>
            <admin_system_config_changed_section_betaout_amplify_options>
                <observers>
                    <yourmodule>
                        <type>singleton</type>
                        <class>Betaout_Amplify_Model_Key</class>
                        <method>getAmplifyConfigChangeObserver</method>
                    </yourmodule>
                </observers>
            </admin_system_config_changed_section_betaout_amplify_options>
            <checkout_onepage_controller_success_action>
                <observers>
                    <checkout_type_onepage_save_order>
                        <class>Betaout_Amplify_Model_Key</class>
                        <method>getAmplifyOrderSuccessPageView</method>
                    </checkout_type_onepage_save_order>
                </observers>
            </checkout_onepage_controller_success_action>
            <checkout_type_onepage_save_order>
                <observers>
                    <checkout_type_onepage_save_order>
                        <class>Betaout_Amplify_Model_Key</class>
                        <method>checkout_type_onepage_save_order</method>
                    </checkout_type_onepage_save_order>
                </observers>
            </checkout_type_onepage_save_order>
            <!--            <catalog_product_save_before>
                <observers>
                    <catalog_product_save_before>
                        <type>singleton</type>
                        <class>Betaout_Amplify_Model_Key</class>
                        <method>catalog_product_save_before</method>
                    </catalog_product_save_before>
                </observers>
            </catalog_product_save_before>-->
            <catalog_product_save_after>
                <observers>
                    <catalog_product_save_after>
                        <type>singleton</type>
                        <class>Betaout_Amplify_Model_Key</class>
                        <method>getAmplifyCatalog_product_save_after</method>
                    </catalog_product_save_after>
                </observers>
            </catalog_product_save_after>
            <sales_order_save_commit_after><!--could used sales_order_save_after for backend support, but it fires mulitple times-->
                <observers>
                    <amplify_sales_order_save_commit_after>
                        <type>singleton</type>
                        <class>Betaout_Amplify_Model_Key</class>
                        <method>getAmplifySales_order_save_commit_after</method>
                    </amplify_sales_order_save_commit_after>
                </observers>
            </sales_order_save_commit_after>
            
        </events>
      
    </global>
    <frontend>
        <routers>
            <amplify>
                <use>standard</use>
                <args>
                    <module>Betaout_Amplify</module>
                    <frontName>amplify</frontName>
                </args>
            </amplify>
        </routers>
        <layout>
            <updates>
                <betaout_amplify module="Betaout_Amplify">
                    <file>betaout_amplify.xml</file>
                </betaout_amplify>
            </updates>
        </layout>
        <events>
            <sales_quote_remove_item>
                <observers>
                    <sales_quote_remove_item>
                        <type>singleton</type>
                        <class>Betaout_Amplify_Model_Key</class>
                        <method>getAmplifyEventRemoveFromCart</method>
                    </sales_quote_remove_item>
                </observers>
            </sales_quote_remove_item>
