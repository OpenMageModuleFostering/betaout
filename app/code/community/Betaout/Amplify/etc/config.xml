                    </wishlist_share>
                </observers>
            </wishlist_share>
            <sendfriend_product>
                <observers>
                    <sendfriend_product>
                        <class>Betaout_Amplify_Model_Key</class>
                        <method>getAmplifySendfriendProduct</method>
                    </sendfriend_product>
                </observers>
            </sendfriend_product>
            <catalog_product_compare_add_product>
                <observers>
                    <catalog_product_compare_add_product>
                        <class>Betaout_Amplify_Model_Key</class>
                        <method>catalogProductCompareAddProduct</method>
                    </catalog_product_compare_add_product>
                </observers>
            </catalog_product_compare_add_product>
             
        </events>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Betaout_Amplify before="Mage_Adminhtml">Betaout_Amplify_Adminhtml</Betaout_Amplify>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <betaout_amplify_options>
                                            <title>Amplify Settings</title>
                                        </betaout_amplify_options>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
               
            </resources>
        </acl>
        <events>
            <catalog_product_delete_after_done>
                <observers>
                    <catalog_product_delete_after_done>
                        <class>Betaout_Amplify_Model_Key</class>
                        <method>getAmplifyCatalog_product_delete_after_done</method>
                    </catalog_product_delete_after_done>
                </observers>
            </catalog_product_delete_after_done>
            <catalog_product_edit_action>
                <observers>
                    <amplify_observer>
                        <class>Betaout_Amplify_Model_Key</class>
                        <method>getAmplifyCatalog_product_edit_action</method>
                    </amplify_observer>
                </observers>
            </catalog_product_edit_action>
        </events>  
    </adminhtml>
</config>