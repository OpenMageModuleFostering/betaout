                </observers>
            </sales_order_place_before>-->
            <customer_register_success>
                <observers>
                    <amplify_customer_register_success>
                        <type>model</type>
                        <class>Betaout_Amplify_Model_Key</class>
                        <method>getAmplifyEventCustomerRegisterSuccess</method>
                    </amplify_customer_register_success>
                </observers>
            </customer_register_success>
